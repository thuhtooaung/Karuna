<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:background="#9AB9D3">

    <android.support.v7.widget.CardView
        android:id="@+id/ta_row_cv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="#F3F5F7"
        android:layout_margin="3dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:weightSum="4"
            android:baselineAligned="false">
            <RelativeLayout
                android:id="@+id/taball_iv_rl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#9C27B0"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="အမည် :"/>
                    <TextView
                        android:id="@+id/tatv1_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="name"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="သွေးအမျိုးအစား :"/>
                    <TextView
                        android:id="@+id/tatv2_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ပမာဏ :"/>
                    <TextView
                        android:id="@+id/tatv3_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ရက်စွဲ :"/>
                    <TextView
                        android:id="@+id/tatv4_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.11.11"/>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>