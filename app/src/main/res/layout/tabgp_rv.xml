<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/ta_row_cv"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardBackgroundColor="#adadef"
        app:cardCornerRadius="24dp"
        android:layout_margin="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:weightSum="4"
            android:baselineAligned="false">
            <RelativeLayout
                android:id="@+id/taball_iv_rl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@mipmap/ic_launcher"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp">
                <TextView
                    android:id="@+id/tabgp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mg:"
                    android:layout_above="@+id/tabgp_tv2"/>

                <TextView
                    android:id="@+id/tabgp_tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Mg:" />
                <TextView
                    android:id="@+id/tabgp_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mg:"
                    android:layout_below="@+id/tabgp_tv2"/>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>